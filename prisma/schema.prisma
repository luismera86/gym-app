// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String            @id @default(uuid())
  email             String            @unique
  name              String
  lastName          String
  password          String
  phone             String
  role              Role              @relation(fields: [roleId], references: [id])
  roleId            String
  subscriptionId    String?
  subscription      Subscription?     @relation(fields: [subscriptionId], references: [id])
  isActived         Boolean           @default(true)
  daysSubscription  Int               @default(0)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  TrainingDayHour   TrainingDayHour[]
  trainingDayHourId String?
}

model Role {
  id        String   @id @default(uuid())
  name      String   @unique
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id        String   @id @default(uuid())
  name      String   @unique
  price     Float
  days      Int
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TrainingDay {
  id               String            @id @default(uuid())
  date             String
  day              String
  trainingDayHours TrainingDayHour[]
}

model TrainingDayHour {
  id            String      @id @default(uuid())
  hour          String
  trainingDay   TrainingDay @relation(fields: [trainingDayId], references: [id])
  trainingDayId String
  users         User[]
  userLimit     Int         @default(3)
}
